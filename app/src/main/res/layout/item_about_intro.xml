<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <import type="cz.covid19cz.app.R"/>
        <variable
            name="item"
            type="cz.covid19cz.app.ui.about.entity.AboutIntroItem" />
        <variable
            name="vm"
            type="cz.covid19cz.app.ui.about.AboutVM" />
    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        app:cardCornerRadius="16dp"
        app:contentPadding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:src="@drawable/logo_covid19cz"
                android:onClick="@{() -> vm.logoClick(@string/covid19_link)}"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/about_intro"
                android:layout_marginTop="16dp"
                android:gravity="center"
                />
        </LinearLayout>


    </androidx.cardview.widget.CardView>



</layout>