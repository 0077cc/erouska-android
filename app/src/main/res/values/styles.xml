<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/colorAccent</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorError">@color/error</item>
        <item name="colorOnError">@color/white</item>
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/text</item>
        <item name="android:colorBackground">@color/background</item>
        <item name="colorOnBackground">@color/colorPrimary</item>

        <item name="android:statusBarColor">@color/background</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="DashTitleExpanded" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="DashTitleCollapsed" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

</resources>
